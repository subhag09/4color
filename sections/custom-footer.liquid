<footer>
  <!-- copyright-area-start -->
  <div class="tp-copyright-5__area">
    <div class="container custom-container-4">
      <div class="tp-copyright-5__border">
        <div class="row align-items-center">
          <div
            class="col-xl-5 col-lg-6 col-md-6 col-sm-7 "
          >
            <div class="tp-copyright-5__text text-center text-md-start">
              <span>{{ section.settings['copy-text'] }}</span>
            </div>
          </div>
          <div class="col-xl-3 d-none d-xl-block ">
            <div class="tp-copyright-5__social-box">
              <a href="{{ settings.social_facebook_link }}"><i class="fa-brands fa-facebook-f"></i></a>
              <a href="{{ settings.social_vimeo_link }}"><i class="fa-brands fa-vimeo-v"></i></a>
              <a href="{{ settings.social_twitter_link }}"><i class="fa-brands fa-twitter"></i></a>
            </div>
          </div>
          <div
            class="col-xl-4 col-lg-6 col-md-6 col-sm-5 d-none d-sm-block"
          >
            <div class="tp-copyright-5__thumb text-center text-md-end">
              <a href="index.html#"><img src="{{ section.settings.payment-img | img_url: 'master' }}" alt=""></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- copyright-area-end -->
</footer>

{% schema %}
{
  "name": "Section name",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "copy-text",
      "label": "Copy Right Text"
    },
    {
      "type": "image_picker",
      "id": "payment-img",
      "label": "Payment Icons"
    }
  ]
}
{% endschema %}
