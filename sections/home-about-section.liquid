<div class="about-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 col-md-6">
        <div class="row align-items-center abouts">
          <div class="col-lg-6 col-md-6">
            <div class="thumb-items">
              <img src="{{ section.settings.image-one | img_url: 'master' }}" alt="">
            </div>
          </div>
          <div class="col-lg-6 col-md-6">
            <div class="thumb-items">
              <img src="{{ section.settings.image-two | img_url: 'master' }}" alt="">
            </div>
            <div class="thumb-items">
              <img src="{{ section.settings.image-three | img_url: 'master' }}" alt="">
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 pl-40 pr-0">
        <div class="print_shop-section-title">
          <h5>
            {{- section.settings.title -}}ss
          </h5>
          <h1>
            {{- section.settings.heading -}}
          </h1>
          <p>
            {{- section.settings.text -}}
          </p>
        </div>
        <div class="row">
          {% assign blocks = section.blocks | where: 'type', 'services' %}
          {% for block in blocks %}
            <div class="col-lg-6 col-md-6">
              <div class="about-print-items">
                <div class="about-icon">
                  <img src="{{ block.settings.ser-icon | img_url: 'master' }}" alt="">
                </div>
                <div class="about-item-content">
                  <h4>{{ block.settings['ser-heading'] }}</h4>
                  <p>{{ block.settings['ser-text'] }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <!-- about check -->
        {% assign blocks = section.blocks | where: 'type', 'service2' %}
        {% for block in blocks %}
          <div class="about-check">
            <p><i class="bi bi-check-lg"></i>{{ block.settings.service }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Home About Section",
  "settings": [
        {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "image-one",
      "label": "Image One"
    },
    {
      "type": "image_picker",
      "id": "image-two",
      "label": "Image Two"
    },
    {
      "type": "image_picker",
      "id": "image-three",
      "label": "Image Three"
    }
  ],
  "blocks": [
    {
      "type": "services",
      "name":"services",
      "settings": [
        {
          "type": "image_picker",
          "id": "ser-icon",
          "label": "Service Icon"
        },
        {
          "type": "text",
          "id": "ser-heading",
          "label": "Service Heading"
        },
        {
          "type": "text",
          "id": "ser-text",
          "label": "Service Text"
        }
      ]
    },
    {
      "type": "service2",
      "name": "Service2",
      "settings": [
        {
          "type": "text",
          "id": "service",
          "label": "service"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home About Section"
    }
  ]
}
{% endschema %}
